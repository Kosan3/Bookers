<% if flash[:notice] %>
    <div class="flash">
    	<%= flash[:notice] %>
    </div>
<% end %>

<div class="index">
	<h1>Books</h1>

	<table>
		<thead>
			<tr>
				<th class="a">Title</th>
				<th class="b">Body</th>
				<th colspan="3" class="colspan"></th>
			</tr>
		</thead>
		<% @books.each do |book| %>
		<tbody>
			<tr>
				<td><%= book.title %></td>
				<td><%= book.body %></td>
				<td><%= link_to "Show", book_path(book) %></td>
				<td><%= link_to "Edit", edit_book_path(book) %></td>
				<td><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are You Sure?" %></td>
			</tr>
		</tbody>
		<% end %>
	</table>
	<br>

	<h3>New book</h3>

	<% if @book.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@book.errors.count,"error") %> prohibited this book from being saved:</h2>
			<ul>
			<% @book.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
			</ul>
		</div>
	<% end %>

	<%= form_for(@book) do |f| %>
		<div class="field title-field">
    		<p><%= f.label :title %></p>
    		<%= f.text_field :title %>
  		</div>

  		<div class="field body-field">
    		<p><%= f.label :body %></p>
    		<%= f.text_area :body %>
  		</div>

		<%= f.submit "Create Book" %>
	<% end %>
</div>