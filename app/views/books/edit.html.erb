<div class="edit">
	<h1 class="edit-title">Editing Book</h1>

	<% if @book.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@book.errors.count,"error") %> prohibited this book from being saved:</h2>
			<ul>
			<% @book.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
			</ul>
		</div>
	<% end %>

	<%= form_for(@book) do |f| %>
		<div class="field title-field">
    		<p><%= f.label :title %></p>
    		<%= f.text_field :title %>
  		</div>

  		<div class="field body-field">
    		<p><%= f.label :body %></p>
    		<%= f.text_area :body %>
  		</div>

		<div class="action"><%= f.submit "Update Book" %></div>
	<% end %>

	<p class="edit-link"><%= link_to "Show", book_path(@book) %>  |  <%= link_to "Back", books_path %></p>
<div class="edit">